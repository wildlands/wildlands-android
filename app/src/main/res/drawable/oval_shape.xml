<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android=" http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android=" http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
            <stroke
                android:width="5dp"
                android:color="#FFFFFF"
                android:dashWidth="0dp"
                android:dashGap="0dp" />
            <size
                android:width="30dp"
                android:height="30dp"
                />
            <solid
                android:color="#00FF00"
                />
        </shape>
    </item>

</selector>

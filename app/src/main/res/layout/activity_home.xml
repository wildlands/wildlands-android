<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kaart_view">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height= "100dp"
            android:src="@drawable/element_07"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/element_01"
            android:id="@+id/grass"
            android:layout_marginTop="45dp"/>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="1000dp" android:background="@drawable/home_bg_color"
        android:layout_below="@+id/grass">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/verkenningBtn"
            android:background="@drawable/btn_green"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:text="Verkenning"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_green"
            android:layout_below="@+id/verkenningBtn"
            android:layout_centerHorizontal="true"
            android:text="Quiz"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
